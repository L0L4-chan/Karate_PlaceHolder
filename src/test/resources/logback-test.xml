<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.thymeleaf" level="ERROR" /> <!-- Reduzca la salida de Thymeleaf -->
    <logger name="org.springframework" level="ERROR" /> <!-- Reduzca la salida de Spring -->
    <logger name="com.intuit.karate" level="WARN" /> <!-- Reduzca la salida de Karate -->
    
    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
